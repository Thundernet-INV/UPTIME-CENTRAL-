<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Uptime Central</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <script>
    // Prevenir flash de modo claro/oscuro
    (function() {
      try {
        const theme = localStorage.getItem('uptime-theme');
        if (theme === 'dark') {
          document.documentElement.style.backgroundColor = '#0a0c10';
          document.body.style.backgroundColor = '#0a0c10';
          document.documentElement.style.color = '#e5e7eb';
        }
      } catch (e) {}
    })();
  </script>
  </head>
  <body>
    <div id="root"></div>
    <script type="module" src="/src/main.jsx"></script>
  <script src="/dark-mode-emergency.js"></script>
  </body>
</html>
